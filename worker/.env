# RabbitMQ Configuration
RABBITMQ_URI=amqp://user:password@rabbitmq:5672/
RABBITMQ_QUEUE=delayed_tasks
RABBITMQ_RESULT_QUEUE=task_results
RABBITMQ_PREFETCH_COUNT=5

# Worker Configuration
WORKER_POOL_SIZE=5
TASK_TIMEOUT=300
LOG_LEVEL=info
POD_NAME=${POD_NAME}

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
READINESS_CHECK_INTERVAL=5

# Resource Limits
MEMORY_LIMIT=512Mi
CPU_LIMIT=500m
MEMORY_REQUEST=256Mi
CPU_REQUEST=200m

# Error Handling
MAX_RETRIES=3
RETRY_DELAY=5
DEAD_LETTER_QUEUE=dead_letter_queue 