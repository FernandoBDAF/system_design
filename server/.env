# MongoDB Configuration
MONGODB_URI=mongodb://admin:password@mongodb:27017/profile_service
MONGODB_DATABASE=profile_service
MONGODB_COLLECTION=profiles

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=300

# RabbitMQ Configuration
RABBITMQ_URI=amqp://user:password@rabbitmq:5672/
RABBITMQ_QUEUE=delayed_tasks
RABBITMQ_RESULT_QUEUE=task_results

# Server Configuration
HTTP_PORT=8080
LOG_LEVEL=info
POD_NAME=${POD_NAME}

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
READINESS_CHECK_INTERVAL=5

# Resource Limits
MEMORY_LIMIT=512Mi
CPU_LIMIT=500m
MEMORY_REQUEST=256Mi
CPU_REQUEST=200m 